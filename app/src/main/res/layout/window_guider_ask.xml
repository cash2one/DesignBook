<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="#5F5F5F"
              android:orientation="vertical">

    <RelativeLayout
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="150dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话咨询设计顾问"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/guide_content"
            android:layout_below="@id/guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignLeft="@id/guide_title"
            android:layout_marginTop="20dp"
            android:text="拨打电话4006-808-509转9999"
            android:textSize="16sp"/>

        <RelativeLayout
            android:id="@+id/guide_choose"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/guide_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/guide_cancle"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7575A9"
                android:text="取消"/>

            <TextView
                android:id="@+id/guide_true"
                android:layout_toRightOf="@id/guide_cancle"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7575A9"
                android:text="拨打"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>