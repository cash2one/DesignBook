<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#FFF"
              android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_desc"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_desc"
            android:layout_marginTop="5dp"
          android:background="@mipmap/ic_jiantou_shang"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
   </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#999595"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_facepic"
            android:layout_width="35dp"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="2dp"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:roundingBorderColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="35dp"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_facepic"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_money_desc"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@id/tv_username"
            android:layout_below="@id/tv_username"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:background="@mipmap/ico_find_phone"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ask"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_ask_red"
        android:gravity="center"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:drawableLeft="@mipmap/ic_tiwen"
            android:text="对图片提问"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/title_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:tabIndicatorColor="@android:color/holo_red_light"
        app:tabSelectedTextColor="@android:color/holo_red_light"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/content_vp"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        />

</LinearLayout>